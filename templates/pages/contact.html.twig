{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="container">
        <h1> Contact</h1>
        <style>
            body { background-image: url("/bundles/home/home2.jpg"); background-repeat:no-repeat;  background-size: cover; width: 100%;
                height: 600px;}
        </style>

        <div id="contactForm" class="mt-4">
            {{ form_start(form) }}
            <div class="row">
                <div class="col">{{ form_row(form.firstname, {'attr': {'placeholder': "Prénom"}}) }}</div>
                <div class="col">{{ form_row(form.lastname, {'attr': {'placeholder': "Nom"}}) }}</div>
                <div class="col">{{ form_row(form.email, {'attr': {'placeholder': "Email"}}) }}</div>
            </div>

            {{ form_rest(form )}}
            <div class="form-group" >

                <button class="btn btn-primary">Envoyé</button>
            </div>
            {{ form_end(form) }}

        </div>

    </div>
{% endblock %}