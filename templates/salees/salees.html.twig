
{% extends 'base.html.twig' %}

{% block title %}Recettes salées{% endblock %}

{% block body %}
    <section class="recettes">
    <h1>Recettes salées</h1>




<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">


        {% for recette in recettes %}

                <div class="col-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{ vich_uploader_asset(recette, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top">
                        <div class="card-body">
                            <p class="card-text">{{ recette.title }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="{{ path('salees_show', {'id': recette.id}) }}" class="btn btn-primary">Lire la suite</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


        {% endfor %}

        </div>
    </div>
</div>

<div class="navigation">

</div>
{% endblock %}